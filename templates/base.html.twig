<!DOCTYPE html>
<html lang="fr">
    <head>
        <!-- Google Tag Manager -->
        <script>
            (function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
                    new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
                j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
                'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
            })(window,document,'script','dataLayer','GTM-56D7SJRF');
        </script>

        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <title>Jaltup - {% block title %}{% endblock %}</title>
        <meta name="description" content="{% block description %}{% endblock %}">
        <meta name="robots" content="{% block robots %}{% endblock %}"/>
        <link rel="icon" href="{{ asset('media/logos/favicon.ico') }}">

        <meta property="og:type" content="website">
        <meta property="og:title" content="{% block ogTitle %}{% endblock %}">
        <meta property="og:url" content="{% block ogUrl %}{% endblock %}">
        <meta property="og:image" content="{% block ogImage %}{% endblock %}">
        <meta property="og:image:alt" content="{% block ogImageAlt %}{% endblock %}"/>
        <meta property="og:description" content="{% block ogDescription %}{% endblock %}">

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}

        <!-- Schema.org -->
        <script type="application/ld+json">
            {
                "@context": "https://schema.org",
                "@type": "Organization",
                "name": "Jaltup",
                "description": "Trouvez des offres, postulez, échangez avec la communauté et simplifiez votre parcours en tant qu'alternant.",
                "url": "https://jaltup.com",
                "logo": "https://jaltup.com/media/logos/logo.png",
                "foundingDate": "2023-12-01",
                "address": {
                    "@type": "PostalAddress",
                    "streetAddress": "128 Rue de la Boetie",
                    "addressLocality": "Paris",
                    "postalCode": "75008",
                    "addressCountry": "FR"
                },
                "contactPoint": {
                    "@type": "ContactPoint",
                    "email": "contact@jaltup.com",
                    "contactType": "service client"
                },
                "sameAs": [
                    "https://www.instagram.com/jaltup_/",
                    "https://twitter.com/Jaltup_",
                    "https://www.linkedin.com/company/jaltup"
                ]
            }
        </script>

        <!-- Google tag (gtag.js) -->
        <script async src="https://www.googletagmanager.com/gtag/js?id=G-L70SP9N41D"></script>
        <script>
            window.dataLayer = window.dataLayer || [];
            function gtag(){dataLayer.push(arguments);}
            gtag('js', new Date());

            gtag('config', 'G-L70SP9N41D');
        </script>
    </head>
    <body>
        <!-- Google Tag Manager (noscript) -->
        <noscript>
            <iframe src="https://www.googletagmanager.com/ns.html?id=GTM-56D7SJRF" height="0" width="0" style="display:none;visibility:hidden"></iframe>
        </noscript>
        <header class="bg-white shadow fixed w-full top-0 z-50">
            <nav class="mx-auto flex max-w-7xl items-center justify-between px-6 py-1 lg:px-8" aria-label="Global">
                <a href="{{ path('app_home') }}" class="-m-1.5 p-1.5">
                    <span class="sr-only">Jaltup</span>
                    <img class="h-6 w-auto" src="{{ asset('media/logos/logo.webp') }}" alt="Logo Jaltup" width="200">
                </a>
                <div class="hidden my-2 lg:flex divide-x divide-gray-500/10">
                    <div class="my-2 space-x-1.5">
                        <a href="{{ path('app_functioning') }}" class="tracking-wide text-sm font-semibold leading-6 px-3 py-2.5 transition duration-200 hover:text-main">Fonctionnement</a>
                    </div>
                    <div class="my-2 space-x-1.5">
                        <a href="{{ path('app_companies') }}" class="tracking-wide text-sm font-semibold leading-6 px-3 py-2.5 transition duration-200 hover:text-main">Pour les entreprises</a>
                        <a href="{{ path('app_login') }}" class="tracking-wide text-sm font-semibold leading-6 px-3 py-2.5 border border-gray-200 rounded-md transition duration-200 hover:bg-gray-50 hover:text-main">Connexion</a>
                        <a href="{{ path('app_register') }}" class="tracking-wide text-sm font-semibold leading-6 px-3 py-2.5 text-white rounded-md bg-main transition duration-200 hover:bg-main-strong">Créer un compte</a>
                    </div>
                </div>
                <div x-data="{ isOpen: false }" class="lg:hidden">
                    <div class="flex lg:hidden my-2">
                        <button @click="isOpen = true"  type="button" class="-m-2.5 inline-flex items-center justify-center p-2 my-0.5 bg-gray-50 rounded-full text-gray-700 hover:ring-main hover:ring-2 transition duration-200">
                            <span class="sr-only">Open main menu</span>
                            <svg class="h-7 w-7" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
                            </svg>
                        </button>
                    </div>
                    <!-- Mobile menu, show/hide based on menu open state. -->
                    <div x-show="isOpen" x-show="isOpen" class="lg:hidden" role="dialog" aria-modal="true">
                        <div class="fixed inset-0 z-10"></div>
                        <div class="fixed inset-y-0 right-0 z-10 w-full overflow-y-auto bg-white px-6 py-6 sm:max-w-sm sm:ring-1 sm:ring-gray-900/10">
                            <div class="flex items-center justify-between">
                                <a href="#" class="-m-1.5 p-1.5">
                                    <span class="sr-only">Jaltup</span>
                                    <img class="h-6 w-auto" src="{{ asset('media/logos/logo.webp') }}" alt="Logo Jaltup" width="200">
                                </a>
                                <button @click="isOpen = false" type="button" class="-m-2.5 rounded-full p-2.5 text-gray-700 bg-gray-50 hover:ring-2 hover:ring-main transition duration-200">
                                    <span class="sr-only">Close menu</span>
                                    <svg class="h-7 w-7" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                                    </svg>
                                </button>
                            </div>
                            <div class="mt-6 flow-root">
                                <div class="-my-6 divide-y divide-gray-500/10">
                                    <div class="space-y-2 py-4 mt-5">
                                        <a href="{{ path('app_functioning') }}" class="-mx-3 block tracking-wide rounded-md px-3 py-2 text-base font-semibold leading-7 hover:text-main transition duration-200">Fonctionnement</a>
                                    </div>
                                    <div class="py-4">
                                        <a href="{{ path('app_companies') }}" class="-mx-3 block tracking-wide rounded-md px-3 py-2 text-base font-semibold leading-7 hover:text-main transition duration-200">Pour les entreprises</a>
                                    </div>
                                    <div class="py-4 space-y-3">
                                        <a href="{{ path('app_login') }}" class="-mx-3 tracking-wide block rounded-md px-3 py-2 text-base font-semibold leading-7 hover:bg-gray-50 hover:text-main transition duration-200 border border-gray-200 text-center">Connexion</a>
                                        <a href="{{ path('app_register') }}" class="-mx-3 text-white bg-main tracking-wide block rounded-md px-3 py-2 text-base font-semibold leading-7 hover:bg-main-strong transition duration-200 text-center">Créer un compte</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </nav>
        </header>

        <main class="relative">
            {% block body %}{% endblock %}
        </main>

        <footer class="bg-gray-100/80">
            <div class="w-full max-w-screen-xl mx-auto px-4 py-8 lg:px-8">
                <div class="sm:flex sm:items-center sm:justify-between">
                    <a href="{{ path('app_home') }}" class="flex items-center mb-4 sm:mb-0 space-x-3 rtl:space-x-reverse">
                        <img src="{{ asset('media/logos/logo.webp')}}" class="h-6 w-auto" alt="Logo Jaltup" width="200">
                    </a>
                    <ul class="flex flex-wrap items-center text-sm font-medium text-gray-500 sm:mb-0 dark:text-gray-400">
                        <li>
                            <a href="{{ path('app_legal_mention') }}" class="hover:text-gray-700 transition duration-200 me-4 md:me-6">Mentions légales</a>
                        </li>
                        <li>
                            <a href="{{ path('app_personal_data') }}" class="hover:text-gray-700 transition duration-200 me-4 md:me-6">Données personnelles</a>
                        </li>
                        <li>
                            <a href="{{ path('app_contact') }}" class="hover:text-gray-700 transition duration-200">Contact</a>
                        </li>
                    </ul>
                </div>
            </div>
        </footer>
    </body>
</html>
