{% extends 'auth_base.html.twig' %}

{% block robots %}index, follow{% endblock %}
{% block title %}Connexion{% endblock %}
{% block description %}Connectez-vous et accédez à des milliers d'offres d'emploi en alternance.{% endblock %}

{% block ogTitle %}Jaltup - Connexion{% endblock %}
{% block ogUrl %}https://jaltup.com/connexion{% endblock %}
{% block ogImage %}{{ asset('media/website/jaltup-banniere.webp') }}{% endblock %}
{% block ogImageAlt %}Jaltup bannière{% endblock %}
{% block ogDescription %}Connectez-vous et accédez à des milliers d'offres d'emploi en alternance.{% endblock %}

{% block body %}
    <section class="flex min-h-full flex-col justify-center py-12 sm:px-6 lg:px-8">
        <div class="sm:mx-auto sm:w-full sm:max-w-md">
            <a href="{{ path('app_home') }}">
                <img class="mx-auto h-6 w-auto" src="{{ asset('media/logos/logo.webp') }}" alt="Logo Jaltup" width="200">
            </a>
            <h2 class="mt-6 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">Connectez-vous à votre compte</h2>
            <p class="mt-2 text-center text-sm text-gray-500">
                Pas encore inscrit ?
                <a href="{{ path('app_register') }}" class="font-semibold leading-6 text-main hover:text-main-strong">S'inscrire gratuitement</a>
            </p>
        </div>
        <div class="mt-10 mx-auto w-full px-2 sm:px-0 max-w-[480px]">
            <div class="bg-white px-6 py-12 shadow rounded-lg sm:px-12">
                <form class="space-y-6" action="#" method="POST">
                    {% if error %}
                        <div class="border-l-4 border-red-400 bg-red-50 p-4">
                            <div class="flex">
                                <div class="flex-shrink-0">
                                    <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                        <path fill-rule="evenodd" d="M8.485 2.495c.673-1.167 2.357-1.167 3.03 0l6.28 10.875c.673 1.167-.17 2.625-1.516 2.625H3.72c-1.347 0-2.189-1.458-1.515-2.625L8.485 2.495zM10 5a.75.75 0 01.75.75v3.5a.75.75 0 01-1.5 0v-3.5A.75.75 0 0110 5zm0 9a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
                                    </svg>
                                </div>
                                <div class="ml-3">
                                    <p class="text-sm text-red-700">
                                        {{ error.messageKey|trans(error.messageData, 'security') }}
                                    </p>
                                </div>
                            </div>
                        </div>
                    {% endif %}
                    <div>
                        <label for="inputEmail" class="block text-sm font-medium leading-6 text-gray-900">Adresse e-mail</label>
                        <div class="mt-2">
                            <input id="inputEmail" name="email" type="email" value="{{ last_username }}" autocomplete="email" required class="block w-full rounded-md border-0 py-2.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-600 focus:ring-2 focus:ring-inset focus:ring-main sm:text-sm sm:leading-6">
                        </div>
                    </div>
                    <div>
                        <label for="inputPassword" class="block text-sm font-medium leading-6 text-gray-900">Mot de passe</label>
                        <div class="mt-2">
                            <input id="inputPassword" name="password" type="password" autocomplete="current-password" required class="block w-full rounded-md border-0 py-2.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-main sm:text-sm sm:leading-6">
                        </div>
                    </div>
                    <div class="flex items-center justify-between">
                        <div class="flex items-center">
                            <input id="remember-me" name="remember-me" type="checkbox" class="h-4 w-4 rounded border-gray-300 text-main focus:ring-main">
                            <label for="remember-me" class="ml-3 block text-sm leading-6 text-gray-900">Se souvenir de moi</label>
                        </div>
                        <div class="text-sm leading-6">
                            <a href="#" class="font-semibold text-gray-500 hover:text-gray-400 transition duration-200">Mot de passe oublié ?</a>
                        </div>
                    </div>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    <div>
                        <button type="submit" class="flex w-full justify-center rounded-md bg-main px-3 py-2.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-main-strong focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-main transition duration-200">Connexion</button>
                    </div>
                </form>

                <div>
                    <div class="relative mt-10">
                        <div class="absolute inset-0 flex items-center" aria-hidden="true">
                            <div class="w-full border-t border-gray-200"></div>
                        </div>
                        <div class="relative flex justify-center text-sm font-medium leading-6">
                            <span class="bg-white px-6 text-gray-900">Connexion avec</span>
                        </div>
                    </div>
                    <div class="mt-6 gap-4">
                        <a href="#" class="flex w-full items-center justify-center gap-3 rounded-md bg-gray-100 px-3 py-2.5 hover:text-main transition duration-200 hover:bg-gray-200/70 border border-gray-300">
                            <svg class="h-5 w-6" viewBox="0 0 134 100" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M9.09091 100H30.303V48.4848L0 25.7576V90.9091C0 95.9394 4.07576 100 9.09091 100Z" fill="#4285F4"/>
                                <path d="M103.03 100H124.242C129.273 100 133.333 95.9242 133.333 90.9091V25.7576L103.03 48.4848" fill="#34A853"/>
                                <path d="M103.03 9.09091V48.4848L133.333 25.7576V13.6364C133.333 2.39394 120.5 -4.01515 111.515 2.72727" fill="#FBBC04"/>
                                <path d="M30.303 48.4848V9.09091L66.6667 36.3636L103.03 9.09091V48.4848L66.6667 75.7576" fill="#EA4335"/>
                                <path d="M0 13.6364V25.7576L30.303 48.4848V9.09091L21.8182 2.72727C12.8182 -4.01515 0 2.39394 0 13.6364Z" fill="#C5221F"/>
                            </svg>
                            <span class="text-sm font-semibold leading-6">Google</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
